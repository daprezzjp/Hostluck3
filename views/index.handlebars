      <a href="#eventinfoguest" class="ui-btn ui-corner-all">Attending Party 1</a>
      <a href="#eventinfoguest" class="ui-btn ui-corner-all">Attending Party 2</a>
      <a href="#eventinfoguest" class="ui-btn ui-corner-all">Attending Party 3</a>
    </div>

{{> footer}}
