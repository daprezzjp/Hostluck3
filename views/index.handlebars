      </fieldset>
    </div>

{{> footer}}
  <!---FindEvent Page--------------------------------------->
  <div data-role="page" id="findevent">
{{> header_back_home}}

    <div data-role="main" class="ui-content ui-corner-all">
      <h1>Find Event</h1>
      <form method="post" action="demoform.asp">
        <input type="range" name="points" id="points" value="50" min="0" max="100">
      </form>
      <h3> Miles radius of</h3>
      <form method="post" action="demoform.asp">
        <label for="zipcode" class="ui-hidden-accessible">Zip Code</label>
        <input type="text" name="zcode" id="zcode" placeholder="Zip Code">
      </form>
      <!-- <input type="submit" value="Submit"> -->
      <a href="#choosemealguest" class="ui-btn ui-corner-all">Submit</a>
    </div>

{{> footer}}
  <!---Recipe Page--------------------------------------->
  <div data-role="page" id="recipe">
{{> header_back_home}}

    <div data-role="main" class="ui-content ui-corner-all">
