<body>
  <!---Splash Page------------------------------------------>
  <div data-role="page" id="splash">
{{> header}}

    <div data-role="main" class="ui-content">
      <h5>Existing Users</h5>
      <a href="#login" class="ui-btn ui-corner-all">Log In</a>
      <h5>Don't have an account?</h5>
      <a href="#signup" class="ui-btn ui-corner-all">Sign Up</a>
    </div>

{{> footer}}
  <!---Signup Page--------------------------------------->
  <div data-role="page" id="signup">
{{> header_back}}

    <div data-role="main" class="ui-content">
      <form method="get" action="/user">
        <label for="sfname" class="ui-hidden-accessible">Firstname</label>
        <input type="text" name="sfname" id="sfname" placeholder="First Name">
        <label for="slname" class="ui-hidden-accessible">Lastname</label>
        <input type="text" name="slname" id="slname" placeholder="Last Name">
        <label for="semail" class="ui-hidden-accessible">Email</label>
        <input type="email" name="semail" id="semail" placeholder="Email">
        <label for="spw" class="ui-hidden-accessible">Password</label>
        <input type="password" name="spw" id="spw" placeholder="Password">
        <input type="submit" id="signupSubmit" value="Submit">
      </form>
    </div>

{{> footer}}
  <!---Login Page--------------------------------------->
  <div data-role="page" id="login">
{{> header_back}}

    <div data-role="main" class="ui-content">
      <form method="post" action="main.php">
        <label for="email" class="ui-hidden-accessible">Email</label>
        <input type="email" name="email" id="lemail" placeholder="Email">
        <label for="password" class="ui-hidden-accessible">Password</label>
        <input type="password" name="pw" id="lpw" placeholder="Password">
      </form>
      <fieldset data-role="controlgroup">
        <input type="checkbox" name="chck-rememberme" id="chck-rememberme" checked="">
        <label for="chck-rememberme">Remember me</label>
        <input type="submit" id="loginSubmit" value="Submit">
      </fieldset>

    </div>

{{> footer}}
  <!---Home Page--------------------------------------->
  <div data-role="page" id="home">
{{> header}}

    <div id="duration"></div>
    <div data-role="main" class="ui-content">
      <a href="#hostmain" class="ui-btn ui-corner-all">Host</a>
      <a href="#findevent" class="ui-btn ui-corner-all">Guest</a>
      <a href="#myeventsmain" class="ui-btn ui-corner-all">My Events</a>
    </div>


{{> footer}}
  <!---HostMain Page--------------------------------------->
  <div data-role="page" id="hostmain">
{{> header_back_home}}

    <div data-role="main" class="ui-content">
      <h1>Host an Event!</h1>
      <form method="post" action="demoform.asp">
        <label for="eventname" class="ui-hidden-accessible">Name Your Event</label>
        <input type="text" name="eventname" placeholder="Name Your Event (Ex. Tom's party)">
        <label for="eventdate" class="ui-hidden-accessible">mm/dd/yy</label>
        <input type="date" name="eventdate" placeholder="mm/dd/yy (Ex. 03/24/16)">
        <label for="eventtime" class="ui-hidden-accessible">Time of Event</label>
        <input type="time" name="eventtime" placeholder="Time of Event (Ex. 8pm)">
      </form>
      <!-- <input type="submit" value="Submit"> -->
      <a href="#pickmealhost" id="hostmainSubmit" class="ui-btn ui-corner-all">Submit</a>
    </div>


{{> footer}}
  <!---PickMeal Page--------------------------------------->
  <div data-role="page" id="pickmealhost">
{{> header_back_home}}

    <div data-role="main" class="ui-content">
      <h1>Pick Your Meal!</h1>
      <ul data-role="listview" data-filter="true">
        {{#each hosts}}
          <li>
            <a href="#hostaddress">
              <img src= {{image}} alt="images" class="img">
              <h2>{{name}}</h2>
            </a>
          </li>
        {{/each}}
      </ul>
    </div>

{{> footer}}
  <!---ChooseMeal Page--------------------------------------->
  <div data-role="page" id="choosemealguest">
{{> header_back_home}}

    <div data-role="main" class="ui-content">
      <h4>Choose the Meal you want to join!</h4>
      <ul data-role="listview" data-filter="true">
        {{#each guests}}
          <li>
            <a href="#attending">
              <img src= {{image}} alt="images" class="img">
              <h2>{{name}}</h2>
              <h3>{{zip}}</h3>
            </a>
          </li>
        {{/each}}
      </ul>
    </div>

{{> footer}}
  <!---HostAddress Page--------------------------------------->
  <div data-role="page" id="hostaddress">
{{> header_back_home}}

    <div data-role="main" class="ui-content">
      <h4>What's the Address?</h4>
      <form method="post" action="demoform.asp">
        <label for="street" class="ui-hidden-accessible">Street (Ex. 123 Gilman Dr)</label>
        <input type="text" name="street" placeholder="Street Address (Ex. 123 Gilman Dr)">
        <label for="city" class="ui-hidden-accessible">City (Ex. San Diego)</label>
        <input type="text" name="city" placeholder="City (Ex. San Diego)">
        <label for="state" class="ui-hidden-accessible">State</label>
        <input type="text" name="state" placeholder="State">
        <label for="zip" class="ui-hidden-accessible">Zip Code (Ex. 90210)</label>
        <input type="number" name="zip" placeholder="Zip Code (Ex. 90210)">
      </form>
      <h3> OR </h3>
      <div data-role="collapsible">
        <h3>Previous Addresses:</h3>
        <ul data-role="listview">
          {{#each addresses}}
            <li><a href="#eventsetup">{{street}}, {{city}} {{zip}}</a></li>
          {{/each}}
        </ul>
      </div>

      <!-- <input type="submit" value="Submit"> -->
      <a href="#eventsetup" class="ui-btn ui-corner-all">Submit</a>
    </div>

{{> footer}}
  <!---GuestMain Page--------------------------------------->
  <div data-role="page" id="guestmain">
{{> header_back_home}}

    <div data-role="main" class="ui-content">
      <h2>Choose Event</h2>
      <a href="#ingredientsmain" class="ui-btn ui-corner-all">Temp Button for sidescroll of Events</a>
    </div>

{{> footer}}
  <!---MyEventsMain Page--------------------------------------->
  <div data-role="page" id="myeventsmain">
{{> header_back_home}}

    <div data-role="main" class="ui-content">
      <h2>Host:</h2>
      <a href="#eventinfohost" class="ui-btn ui-corner-all">Hosting Party 1</a>
      <a href="#eventinfohost" class="ui-btn ui-corner-all">Hosting Party 2</a>
      <a href="#eventinfohost" class="ui-btn ui-corner-all">Hosting Party 3</a>

